<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.Controller.SelectDatabaseController">
   <children>
      <ListView fx:id="dataList" VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></ListView>
      <HBox spacing="10.0">
         <children>
            <Button fx:id="loadButton" mnemonicParsing="false" onAction="#buttonLoadClicked" text="Load">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="5.0" />
               </HBox.margin></Button>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="newButton" mnemonicParsing="false" onAction="#buttonNewClicked" text="New">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </HBox.margin></Button>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#buttonDeleteClicked" text="Delete">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="10.0" />
               </HBox.margin></Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="15.0" top="15.0" />
         </padding>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../../styles/buttonStyles.css" />
      <URL value="@../../styles/MetroTheme.css" />
   </stylesheets>
</VBox>
