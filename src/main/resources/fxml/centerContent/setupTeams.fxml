<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../../styles/style.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.Controller.TeamSetupController">
    <children>
        <HBox VBox.vgrow="ALWAYS">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <HBox VBox.vgrow="NEVER">
                            <children>
                                <Button mnemonicParsing="false" onMouseClicked="#onAddTeamButtonClicked" text="ADD TEAM">
                                    <opaqueInsets>
                                        <Insets />
                                    </opaqueInsets>
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" onMouseClicked="#onEditTeamButtonClicked" text="EDIT TEAM">
                                    <opaqueInsets>
                                        <Insets right="10.0" />
                                    </opaqueInsets>
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin>
                                </Button>
                                <Button mnemonicParsing="false" onMouseClicked="#onRemoveTeamButtonClicked" text="REMOVE TEAM">
                                    <opaqueInsets>
                                        <Insets right="10.0" />
                                    </opaqueInsets>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </HBox>
                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                                <ListView fx:id="teamListView" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                    </children>
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </VBox>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <HBox VBox.vgrow="NEVER">
                            <children>
                                <Button mnemonicParsing="false" onMouseClicked="#onAddPlayerButtonClicked" text="ADD PLAYER">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin></Button>
                                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#onEditPlayerButtonClicked" text="EDIT PLAYER">
                           <HBox.margin>
                              <Insets right="5.0" />
                           </HBox.margin></Button>
                                <Button mnemonicParsing="false" onMouseClicked="#onRemovePlayerClicked" text="REMOVE PLAYER" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </HBox>
                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                              <ListView fx:id="playerListView" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                    </children>
                </VBox>
            </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
        </HBox>
      <HBox>
         <children>
            <Label fx:id="labelInfo">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" top="15.0" />
               </HBox.margin>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button defaultButton="true" mnemonicParsing="false" onMouseClicked="#onApplyButtonClick" prefWidth="100.0" text="APPLY">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
    </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
