<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<DialogPane headerText="EDIT PLAYER" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <VBox>
         <children>
            <HBox>
               <children>
                  <TextField promptText="Name" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" text="REMOVE SELECTED" />
                  <Button mnemonicParsing="false" text="ADD PLAYER" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TableView HBox.hgrow="ALWAYS">
                    <columns>
                      <TableColumn prefWidth="75.0" text="FIRSTNAME" />
                      <TableColumn prefWidth="75.0" text="LASTNAME" />
                    </columns>
                  </TableView>
               </children>
            </HBox>
         </children>
      </VBox>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="APPLY" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
</DialogPane>
